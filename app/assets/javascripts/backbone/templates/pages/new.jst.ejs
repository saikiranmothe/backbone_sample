<h1>New page</h1>

<form id="new-page" name="page">
  <div class="field">
    <label for="name"> name:</label>
    <input type="text" name="name" id="name" value="<%= name %>" >
  </div>

  <div class="field">
    <label for="title"> title:</label>
    <input type="text" name="title" id="title" value="<%= title %>" >
  </div>

  <div class="field">
    <label for="background_color"> background_color:</label>
    <input type="text" name="background_color" id="background_color" value="<%= background_color %>" >
  </div>

  <div class="field">
    <label for="padding"> padding:</label>
    <input type="text" name="padding" id="padding" value="<%= padding %>" >
  </div>

  <div class="field">
    <label for="margin"> margin:</label>
    <input type="text" name="margin" id="margin" value="<%= margin %>" >
  </div>

  <div class="field">
    <label for="font"> font:</label>
    <input type="text" name="font" id="font" value="<%= font %>" >
  </div>

  <div class="actions">
    <input type="submit" value="Create Page" />
  </div>

</form>

